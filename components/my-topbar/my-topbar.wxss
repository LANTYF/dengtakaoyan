.topbar .navbar {
  position: relative;
}

.topbar .navbar .box {
  position: absolute;
  top: 50%;
  transform: translate(5%, -50%);
  padding: 60rpx;
}

.topbar .navbar .box .arrow {
  width: 16rpx;
  transform: rotate(180deg);
}

.topbar .navbar .nav-title {
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
  display: flex;
  align-items: center;
}
